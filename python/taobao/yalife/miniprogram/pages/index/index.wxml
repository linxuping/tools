<!--index.wxml-->
<view class="container">

  <!-- 用户 openid -->
  <view class="userinfo" style="display:none">
    <button 
      open-type="getUserInfo" 
      bindgetuserinfo="onGetUserInfo"
      class="userinfo-avatar"
      style="background-image: url({{avatarUrl}})"
    ></button>
    <view>
      <button class="userinfo-nickname" bindtap="onGetOpenid">点击获取 openid</button>
    </view>
  </view>

  <view class="weui-search-bar" style="width:100%;position:fixed; top:0;z-index:100">
    <view class="weui-search-bar__form">
      <view class="weui-search-bar__box">
        <icon class="weui-icon-search_in-box" type="search" size="14"></icon>
        <input type="text" v-model="keyword" class="weui-search-bar__input" placeholder="淘宝优惠券" bindinput="updateKeyword" bindtap="clickSearch" bindconfirm="tbSearch"/>
      </view>
    </view>
  </view>

  <view class="uploader" wx:for="{{goods}}" wx:if="{{showGoods}}" style="display:none">
    <navigator url="../addFunction/addFunction" open-type="navigate" class="uploader-text">
      <image src="{{item.img}}" style="width:100px;height:100px"></image>
      <text>{{item.title}}</text>
    </navigator>
  </view>


  <view class="card" wx:for="{{goods}}" wx:if="{{showGoods}}">
      <view>
          <image class="image" mode="aspectFill" src="{{item.img}}"/>
          <text class="time"></text>
          <view class="title">{{item.title}}</view>
          <view class="title" style="vertical-aligh:center">
            <text style="font-size:0.8em">销量：{{item.sale_count}} </text>
            <text style="font-size:0.8em">价格：¥{{item.price}}  </text>
            <image src="https://7961-yalife-3e57c3-1257619748.tcb.qcloud.la/fetch.png?sign=59e2757d6536156960fe56368d5ba332&t=1539522610" style="height:40px;width:40px;position:absolute;right:5px;bottom:1px" bindtap="copyQuanter" data-code="{{item.code}}"></image>
            <text style="font-size:1em;position:absolute;right:50px;bottom:1px;color:red"data-code="{{item.code}}" bindtap="copyQuanter" > 优惠券：¥{{item.quanter}}  </text>
          </view>
      </view>
  </view>

  <view class="search-types">
    <view wx:if="{{showTypes}}" style="">
      <view style="margin:20px;display:inline-block;background-color:#CDCDCD" wx:for="{{types}}">
        <text bindtap="typeSearch" data-type="{{item}}" style="margin:10px">{{item}}</text>
      </view>
      <view style="margin:30px;display:inline-block">
        <text bindtap="typeSearch" data-type="全部">全部</text>
      </view>
      <view style="position:fixed;bottom:4px;right:8px"><text style="color:#CDCDCD">客服微信号：lttlovefm</text></view>
    </view>  
    
  </view>


  <!-- 上传图片 -->
  <view class="uploader" style="display:none">
    <view class="uploader-text" bindtap="doUpload">
      <text>上传图片</text>
    </view>
    <view class="uploader-container" wx:if="{{imgUrl}}">
      <image class="uploader-image" src="{{imgUrl}}" mode="aspectFit" bindtap="previewImg"></image>
    </view>
  </view>
  <!-- 操作数据库 -->
  <view class="uploader" style="display:none">
    <navigator url="../databaseGuide/databaseGuide" open-type="navigate" class="uploader-text">
      <text>前端操作数据库</text>
    </navigator>
  </view>
  <!-- 新建云函数 -->
  <view class="uploader" style="display:none">
    <navigator url="../addFunction/addFunction" open-type="navigate" class="uploader-text">
      <text>快速新建云函数</text>
    </navigator>
  </view>
  

</view>
