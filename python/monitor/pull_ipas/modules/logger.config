#logger.conf
###############################################
[loggers]
keys=root,filef,file_outputf,file_output

[logger_root]
level=INFO
handlers=hand01,hand02

[logger_filef]
handlers=hand02
qualname=filef
propagate=0

[logger_file_outputf]
handlers=hand01,hand02
qualname=file_outputf
propagate=0

[logger_file_output]
handlers=hand01,hand03
qualname=file_output
propagate=0
###############################################
[handlers]
keys=hand01,hand02,hand03

[handler_hand01]
class=StreamHandler
level=INFO
formatter=form02
args=(sys.stderr,)

[handler_hand02]
class=FileHandler
level=DEBUG
formatter=form01
args=('output.log', 'a')

[handler_hand03]
class=handlers.RotatingFileHandler    #定义一个RotatingFileHandler最多备份5个日志文件，每个日志文件最大10M
level=INFO
formatter=form02
args=('output.log', 'a', 10*1024*1024, 5)
###############################################
[formatters]
keys=form01,form02

[formatter_form01]
format=%(asctime)s %(process)d %(thread)d [%(levelname)s] %(message)s
datefmt=%Y:%m:%d %H:%M:%S

[formatter_form02]
format=%(name)-12s: %(levelname)-8s %(message)s
datefmt=

